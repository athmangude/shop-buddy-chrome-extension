{
  "version": "0.0.0",
  "name": "Shopbuddy",
  "manifest_version": 2,
  "description": "You shop, we deliver",
  "browser_action": {
    "default_title": "Shopbuddy",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "content_scripts": [ {
    "js": [ "libs/jquery-3.0.0.min.js" ],
    "matches": [ "https://www.amazon.com/*" ]
  }],
  "background": {
    "page": "background.html",
    "js": [ "libs/jquery-3.0.0.min.js" ],
    "matches": [ "https://www.amazon.com/*" ]
  },
  "permissions": [ "contextMenus", "management", "tabs", "activeTab", "storage", "https://www.amazon.com/*" ],
  "content_security_policy": "default-src 'self'; script-src 'self' http://localhost:3000 https://localhost:3000 'unsafe-eval'; connect-src http://localhost:3000 https://localhost:3000 *; style-src * 'unsafe-inline' 'self' blob:; img-src * 'self' data:; font-src *;"
}
